{
  "manifest_version": 3,
  "name": "验证码生成器",
  "version": "2.0",
  "description": "简洁易用的验证码生成器，支持拖动排序、圆形倒计时、高亮显示等功能",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "permissions": ["storage"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
